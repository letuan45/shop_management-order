generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Supplier {
  id           Int            @id @default(autoincrement())
  name         String
  address      String
  phone        String         @unique
  email        String         @unique
  ReceiptOrder ReceiptOrder[]
  receiptBills ReceiptBill[]
}

model ReceiptOrder {
  id                 Int                  @id @default(autoincrement())
  employeeId         Int
  supplier           Supplier             @relation(fields: [supplierId], references: [id])
  supplierId         Int
  status             Int                  @default(0)
  createAt           DateTime             @default(now())
  updateAt           DateTime             @updatedAt
  ReceiptOrderDetail ReceiptOrderDetail[]
}

model ReceiptOrderDetail {
  id             Int          @id @default(autoincrement())
  productId      Int
  receiptOrder   ReceiptOrder @relation(fields: [receiptOrderId], references: [id])
  receiptOrderId Int
  quantity       Int
  price          Int
}

model ReceiptBill {
  id                 Int                 @id @default(autoincrement())
  totalPayment       Int
  employeeId         Int
  supplier           Supplier            @relation(fields: [supplierId], references: [id])
  supplierId         Int
  createAt           DateTime            @default(now())
  updateAt           DateTime            @updatedAt
  receiptBillDetails ReceiptBillDetail[]
}

model ReceiptBillDetail {
  id            Int         @id @default(autoincrement())
  productId     Int
  receiptBill   ReceiptBill @relation(fields: [receiptBillId], references: [id])
  receiptBillId Int
  quantity      Int
  price         Int
}
